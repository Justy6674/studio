modules = ["nodejs-20", "web", "nix"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm start"]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 9002
externalPort = 80

[workflows]
runButton = "Development Server (Fixed)"

[[workflows.workflow]]
name = "Development Server"
author = 41159292
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- -p 5000 -H 0.0.0.0"

[[workflows.workflow]]
name = "Development Server (Fixed)"
author = 41159292
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --port 5000 --hostname 0.0.0.0"

[[workflows.workflow]]
name = "Dev Without Turbopack"
author = 41159292
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx next dev -p 5000 -H 0.0.0.0"

[[workflows.workflow]]
